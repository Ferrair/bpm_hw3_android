<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.qihang.bpm_hw3">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".CustomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.PaymentActivity" />
        <activity android:name=".activity.ScanCardActivity" />
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.RegistrationListActivity"
            android:theme="@style/AppTheme.NoActionBarWhite" />
        <activity
            android:name=".activity.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBarWhite" />
        <activity
            android:name=".activity.PrescriptListActivity"
            android:label="@string/title_activity_prescript"
            android:theme="@style/AppTheme.NoActionBarWhite" />
        <activity
            android:name=".activity.PrescriptActivity"
            android:label="@string/title_activity_prescript"
            android:theme="@style/AppTheme.NoActionBarWhite" />
        <activity
            android:name=".activity.ExaminationListActivity"
            android:label="@string/title_activity_examination_list"
            android:theme="@style/AppTheme.NoActionBarWhite" />
        <activity
            android:name=".activity.ExaminationActivity"
            android:label="@string/title_activity_examination"
            android:theme="@style/AppTheme.NoActionBarWhite"/>
    </application>

</manifest>