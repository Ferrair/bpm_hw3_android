<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.qihang.bpm_hw3.activity.DrugResultActivity"
    tools:showIn="@layout/activity_drug_result">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="拿药结果ID："
                android:textColor="#000000"
                android:textSize="48px" />

            <TextView
                android:id="@+id/drug_result_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:paddingLeft="10dp"
                android:text="118037910008"
                android:textColor="@color/main_content_text"
                android:textSize="@dimen/main_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="处方时间："
                android:textColor="#000000"
                android:textSize="48px" />

            <TextView
                android:id="@+id/drug_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:paddingLeft="10dp"
                android:text="2018/9/8 12：32"
                android:textColor="@color/main_content_text"
                android:textSize="@dimen/main_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="拿药地点："
                android:textColor="#000000"
                android:textSize="48px" />

            <TextView
                android:id="@+id/pharmacy_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:paddingLeft="10dp"
                android:text="张医生"
                android:textColor="@color/main_content_text"
                android:textSize="@dimen/main_text_size" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="拿药结果详情："
                android:textColor="#000000"
                android:textSize="48px" />

            <TextView
                android:id="@+id/drug_result_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="这里具体出现了什么问题这里具体出现了什么问题这里具体出现了什么问题这里具体出现了什么问题这里具体出现了什么问题这里具体出现了什么问题....(问题描述不超过100个字）"
                android:textColor="@color/main_content_text"
                android:textSize="@dimen/main_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="处方详情："
                android:textColor="#000000"
                android:textSize="48px" />

            <TextView
                android:id="@+id/prescript_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="这里具体出现了什么问题这里具体出现了什么问题这里具体出现了什么问题这里具体出现了什么问题这里具体出现了什么问题这里具体出现了什么问题....(问题描述不超过100个字）"
                android:textColor="@color/main_content_text"
                android:textSize="@dimen/main_text_size" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/report"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_button"
        android:text="生成报告"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>